<%
  large = "large-9 push-3"
  small = "large-3 pull-9"
 %>

<div class="row">
  <div class="large-9 columns">
    <div class="feed">
      <%= render "home/feed/timestamp", time: "Today, July 9 2014" %>

      <div class="row activity">
        <div class="<%= large %> columns">
          <div class="activity-content">
            <p class="title">
              <span class="event new-follow-event"><i class="ss-icon ss-users"></i></span>

              <img class="user-avatar" src="http://s3.amazonaws.com/challengepost/photos/production/user_photos/000/127/180/datas/profile.jpg?1398969079">
              <b>Rob Bout</b> is now following
              <%= link_to "Justin Timberlol", "#" %> and <%= link_to "Britney Spears", "#" %>!
            </p>

            <div class="row">
              <div class="large-6 columns">
                <%= render "user_thumbnail" %>
              </div>
              <div class="large-6 columns">
                <%= render "user_thumbnail", user: "Britney Spears", desc: "Oh, cry me a river...", image: "britneycover.png", avatar: "britavatar.png" %>
              </div>
            </div>
          </div>
        </div>
        <div class="<%= small %> columns">
          <div class="activity-sidebar">
            <div class="section">
              <%= link_to "Find similar hackers", "#", class: "button medium secondary" %>
            </div>
          </div>
        </div>
      </div>

      <div class="row activity">
        <div class="<%= large %> columns">
          <div class="activity-content">
            <p class="title">
              <span class="event new-project-event"><i class="ss-icon ss-laptop"></i></span>

              <img class="user-avatar" src="http://s3.amazonaws.com/challengepost/photos/production/user_photos/000/134/001/datas/profile.jpg?1401684770">
              <b>Stefano Billiebeni</b> added a new project,
              <%= link_to "Ivysaur", projects_path %>!
            </p>

            <div class="row software-row">
              <div class="large-8 columns">
                <%= render "software_thumbnail", apps[5] %>
              </div>
              <div class="large-4 columns">
                <blockquote cite="http://url-of-the-software.com#quote-anchor">
                  <p>
                    I used the Pokemon API for this app.
                    It's really well documented and fun to use!
                  </p>
                  <p>
                    &mdash; Stefano
                  </p>
                </blockquote>
              </div>
            </div>
          </div>
        </div>
        <div class="<%= small %> columns">
          <div class="activity-sidebar">
            <%= render "home/feed/new_software/actions" %>
          </div>
        </div>
      </div>

      <div class="row activity">
        <div class="<%= large %> columns">
          <div class="activity-content">
            <p class="title">
              <span class="event like-event"><i class="ss-icon ss-heart"></i></span>

              <img class="user-avatar" src="http://s3.amazonaws.com/challengepost/photos/production/user_photos/000/127/180/datas/profile.jpg?1398969079">
              <b>Rob Bout</b> liked 3 projects.
            </p>


            <div class="row software-row">
              <div class="large-12 columns">
                <%= render "software_thumbnail", apps[0] %>
              </div>
              <div class="large-6 columns">
                <%= render "software_thumbnail", apps[2] %>
              </div>
              <div class="large-6 columns">
                <%= render "software_thumbnail", apps[4] %>
              </div>
            </div>
          </div>
        </div>
        <div class="<%= small %> columns">
          <div class="activity-sidebar">
            <div class="section">
              <%= link_to "Find similar projects", "#", class: "button medium secondary" %>
            </div>
          </div>
        </div>
      </div>

      <%= render "home/feed/timestamp", time: "2 days ago" %>

      <div class="row activity">
        <div class="<%= large %> columns">
          <div class="activity-content">
            <p class="title">
              <span class="event new-comment-event"><i class="ss-icon ss-chat"></i></span>

              <img class="user-avatar" src="http://s3.amazonaws.com/challengepost/photos/production/user_photos/000/127/180/datas/profile.jpg?1398969079">
              <b>Berman</b> left a comment on your sofware <b><%= link_to "Elevator", projects_path %></b>.
            </p>

            <%= render "comment" %>
          </div>
        </div>
        <div class="<%= small %> columns">
          <div class="activity-sidebar">
            <div class="section">
              <%= link_to "Answer", "#", class: "button medium secondary comment" %>
            </div>
          </div>
        </div>
      </div>

      <%= render "home/feed/timestamp", time: "July 1st 2014" %>

      <div class="row activity">
        <div class="<%= large %> columns">
          <div class="activity-content">
            <p class="title">
              <span class="event new-comment-event"><i class="ss-icon ss-chat"></i></span>

              <img class="user-avatar" src="http://s3.amazonaws.com/challengepost/photos/production/user_photos/000/127/180/datas/profile.jpg?1398969079">
              <b>You</b> left a comment on your own sofware <b><%= link_to "PoExplorer", projects_path %></b>.
            </p>

            <%= render "comment", comment: "And go like your own software too, why don't you?", author: "Rob Bout" %>
          </div>
        </div>
        <div class="<%= small %> columns">
          <div class="activity-sidebar">
            <div class="section">
              <%= link_to "Answer", "#", class: "button medium secondary comment" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="large-3 columns">
    <h2>Reputation</h2>

    <div class="badges">
      <ul class="no-bullet">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
      </ul>
    </div>
  </div>
</div>
