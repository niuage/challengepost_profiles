        <div class="row software-row">
          <div class="large-8 columns">
            <%= render "software_thumbnail", apps[5] %>
          </div>
          <div class="large-4 columns">
            <div class="section">
              <%= link_to projects_path, class: "button secondary with-icon with-text" do %>
